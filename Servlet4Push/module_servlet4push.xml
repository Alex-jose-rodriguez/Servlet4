<?xml version="1.0" encoding="UTF-8"?>
<project name="module_servlet4push" default="compile.module.servlet4push">
  <dirname property="module.servlet4push.basedir" file="${ant.file.module_servlet4push}"/>
  
  <property name="module.jdk.home.servlet4push" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.servlet4push" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.servlet4push" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.servlet4push" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>
  
  <property name="servlet4push.output.dir" value="${module.servlet4push.basedir}/target/classes"/>
  <property name="servlet4push.testoutput.dir" value="${module.servlet4push.basedir}/target/test-classes"/>
  
  <path id="servlet4push.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="servlet4push.module.production.classpath">
    <path refid="${module.jdk.classpath.servlet4push}"/>
    <path refid="library.maven:_com.sun.faces:jsf-api:2.1.7.classpath"/>
    <path refid="library.maven:_com.sun.faces:jsf-impl:2.1.7.classpath"/>
    <path refid="library.maven:_javax.servlet:javax.servlet-api:4.0.0-b07.classpath"/>
    <path refid="library.maven:_javax.servlet.jsp:javax.servlet.jsp-api:2.3.2-b02.classpath"/>
  </path>
  
  <path id="servlet4push.runtime.production.module.classpath">
    <pathelement location="${servlet4push.output.dir}"/>
    <path refid="library.maven:_com.sun.faces:jsf-api:2.1.7.classpath"/>
    <path refid="library.maven:_com.sun.faces:jsf-impl:2.1.7.classpath"/>
  </path>
  
  <path id="servlet4push.module.classpath">
    <path refid="${module.jdk.classpath.servlet4push}"/>
    <pathelement location="${servlet4push.output.dir}"/>
    <path refid="library.maven:_com.sun.faces:jsf-api:2.1.7.classpath"/>
    <path refid="library.maven:_com.sun.faces:jsf-impl:2.1.7.classpath"/>
    <path refid="library.maven:_javax.servlet:javax.servlet-api:4.0.0-b07.classpath"/>
    <path refid="library.maven:_javax.servlet.jsp:javax.servlet.jsp-api:2.3.2-b02.classpath"/>
  </path>
  
  <path id="servlet4push.runtime.module.classpath">
    <pathelement location="${servlet4push.testoutput.dir}"/>
    <pathelement location="${servlet4push.output.dir}"/>
    <path refid="library.maven:_com.sun.faces:jsf-api:2.1.7.classpath"/>
    <path refid="library.maven:_com.sun.faces:jsf-impl:2.1.7.classpath"/>
    <path refid="library.maven:_javax.servlet:javax.servlet-api:4.0.0-b07.classpath"/>
    <path refid="library.maven:_javax.servlet.jsp:javax.servlet.jsp-api:2.3.2-b02.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.servlet4push">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.servlet4push">
    <patternset refid="excluded.from.module.servlet4push"/>
  </patternset>
  
  <path id="servlet4push.module.sourcepath">
    <dirset dir="${module.servlet4push.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.servlet4push" depends="compile.module.servlet4push.production,compile.module.servlet4push.tests" description="Compile module Servlet4Push"/>
  
  <target name="compile.module.servlet4push.production" depends="register.custom.compilers" description="Compile module Servlet4Push; production classes">
    <mkdir dir="${servlet4push.output.dir}"/>
    <javac2 destdir="${servlet4push.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.servlet4push}/javac">
      <compilerarg line="${compiler.args.servlet4push}"/>
      <bootclasspath refid="servlet4push.module.bootclasspath"/>
      <classpath refid="servlet4push.module.production.classpath"/>
      <src refid="servlet4push.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.servlet4push"/>
    </javac2>
    
    <copy todir="${servlet4push.output.dir}">
      <fileset dir="${module.servlet4push.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.servlet4push.tests" depends="register.custom.compilers,compile.module.servlet4push.production" description="compile module Servlet4Push; test classes" unless="skip.tests"/>
  
  <target name="clean.module.servlet4push" description="cleanup module">
    <delete dir="${servlet4push.output.dir}"/>
    <delete dir="${servlet4push.testoutput.dir}"/>
  </target>
</project>